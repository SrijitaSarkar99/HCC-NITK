<div class="container">
<h2>Sign up</h2>
<br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "auth_users/shared/error_messages", resource: resource %>

  <div class="field form-group"><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
    class:"form-control",
    placeholder:"Email" %>
  </div>

  <div class="field form-group"><br/>
    <!--<% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>-->
    <%= f.password_field :password, autocomplete: "new-password",
    class:"form-control",
    placeholder:"Password" %>
  </div>

  <div class="field form-group"><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
    class:"form-control",
    placeholder:"Confirm Password" %>
  </div>

  <div class="field"><br/>
    <%= f.label :role %>
    <%= f.select :roles, AuthUser.roles.keys.map { |role| [role.titleize, role] },class:"btn btn-primary"%>
  </div>

  <div class="actions"><br/>
    <%= f.submit "Sign up",class:"btn btn-primary" %>
  </div><br/>
<% end %>

<%= render "auth_users/shared/links" %>
</div>